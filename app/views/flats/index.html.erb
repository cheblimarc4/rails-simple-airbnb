<div class="container mt-5">
  <h1 class="text-center mb-4">Available Flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
        <div class="card mb-4 shadow-sm border-primary">
          <div class="card-body">
            <h5 class="card-title text-primary"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <p class="card-text"><%= flat.description %></p>
            <p class="card-text"><strong>Price per Night:</strong> $<%= flat.price_per_night %></p>
            <p class="card-text"><strong>Guests:</strong> <%= flat.number_of_guests %> guests</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
